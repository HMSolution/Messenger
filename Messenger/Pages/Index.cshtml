@page

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Welcome to your messaging App</h1>
</div>

<div>
    <h4>Aktuelle Unterhaltung</h4>
</div>

<form method="post">
    <input placeholder="Deine Nachricht..." type="text" asp-for="Message" />
    <button type="submit">Send Message</button>
</form>


@foreach (var message in @Model.Messages)
{
    <span>@message</span><br/>
}
